@model Product
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<form method="post">
    <input type="hidden" name="ProductId" id="ProductId" value="@Model.ProductId" />
    <div class="form-group">
        <label for="name">Name</label>
        <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Enter Name" required>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input asp-for="Description" type="text" class="form-control" id="Description" placeholder="Enter Description" required>
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input asp-for="Price" type="text" class="form-control" id="Price" placeholder="Enter Price" required>
    </div>
    <div class="form-group">
        <label for="Category">Category</label>
        <input asp-for="Category" type="text" class="form-control" id="Category" placeholder="Enter Category" required>
    </div>
    <div class="form-group">
        <label for="Stock">Stock</label>
        <input asp-for="Stock" type="number" class="form-control" id="Stock" placeholder="Enter Stock" required>
    </div>
    <input type="submit" class="btn btn-dark btn-sm" value="Submit" />
    <a class="btn btn-dark btn-sm" asp-controller="Product" asp-action="List">
        Back Product List
    </a>
</form>
